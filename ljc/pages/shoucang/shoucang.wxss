/* pages/shoucang/shoucang.wxss */

page {
  background-color: #f3f3f3;
  display: flex;
  flex-direction: column;
}

/* 搜索框样式 */

.search {
  margin: 0 auto;
  width: 95%;
  height: 60rpx;
  background-color: white;
  margin-top: 2%;
  border: 1rpx solid white;
  border-radius: 10rpx;
}

/* 搜索框提示文字样式 */

.search input {
  font-size: 30rpx;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  padding-left: 30rpx;
}

/* 搜索框小图标 */

.search image {
  width: 40rpx;
  height: 40rpx;
  float: right;
  position: absolute;
  top: 2.5%;
  right: 5%;
}

.shoucang_box {
  border-radius: 20rpx;
  background-color: #fff;
  width: 95%;
  height: 180rpx;
  margin: 0 auto;
  margin-top: 15rpx;
}

.article {
  width: 100%;
  height: 100rpx;
}

.content_image {
  width: 120rpx;
  height: 100rpx;
  margin-top: 15rpx;
  margin-left: 20rpx;
  border-radius: 10rpx;
}

.shoucang_title {
  font-size: 36rpx;
  margin-left: 20rpx;
  left: 15rpx;
  width: 600rpx;
  /* line-height: 50rpx;
  vertical-align: middle; */
}

.author {
  display: flex;
  flex-direction: row;
  margin-top: 0rpx;
  margin-left: 20rpx;
  width: 100%;
  font-size: 28rpx;
}
