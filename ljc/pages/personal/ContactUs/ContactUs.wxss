/* pages/personal/ContactUs/ContactUs.wxss */

page {
  background-image: url(https://hukehuke.oss-cn-beijing.aliyuncs.com//data/1556359311587.jpg);
  width: 100%;
  height: 100%;
}

.con {
  width: 80%;
  /* height: 100%; */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-left: 10%;
  background-color: #fff;
}

.divLine {
  background: #69c3aa;
  width: 100%;
  height: 3rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.textContent {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.textContent textarea {
  font-size: 32rpx;
  width: 500rpx;
  height: 400rpx;
  margin-bottom: 10rpx;
  align-items: center;
  justify-content: center;
}

.btn-img2 {
  width: 50rpx;
  height: 50rpx;
}

.AboutTitle {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
  font-size: 30rpx;
  line-height: 50rpx;
  color: #666;
}

.poetry {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  font-size: 26rpx;
  line-height: 45rpx;
  color: #999;
  font-family: SimSun;
  font-weight: 600;
}

/* 人员介绍 */
span {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #999;
  font-size: 26rpx;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}

.developer {
  width: 200rpx;
  height: 200rpx;
  border-radius: 40%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
